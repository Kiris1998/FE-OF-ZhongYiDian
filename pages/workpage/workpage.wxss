.addPicture{
  border: 1rpx solid #ccc;
  background-color: #FFFEF9;
  color:#0066ff;
  padding: 3vh 300rpx;
  width:300rpx;
}

/* 讨论内容评论展示 */
.comment{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  height: 80rpx;
  border-bottom: 1rpx solid #D8E5F9;
}
text{
  padding:20rpx;
}
.commentIt{
  display: flex;
  flex-direction: row;
  align-items: center;
}