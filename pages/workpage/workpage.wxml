<!-- 作品名称及描述 -->
<view class='work' style="background-image: url('../../img/background.png')">
  <view class='workname'>作品名称:</view>
  <view class='workdescription'>作品描述:
  </view>
</view>

<!-- 作品作者及内容 -->
<view class='author'>
  <view class='authordetail'>
    <image src='/img/avatar/1.png' class='authorimage'></image>
    <view class='authorname'>
      <view>Curtin</view>
      <view class='authortime'>2018-8-5 13:00</view>
    </view>
  </view>
  <!-- 作品内容展示 -->
  <movable-area class="page-section">
    <block wx:key="imageskey" wx:for="{{imageskey}}" wx:for-item="item">
      <movable-view 
        x="{{item.x}}" y="{{item.y}}" 
        direction="all"
        data-id='{{item.id}}'
        bindtouchstart='ShowImage'
        class="{{item.id===now_tab?'page-selected-image':'page-image'}}"
        scale scale-min="0.5" scale-max="4"
        out-of-bounds>
        <image src='{{item.img}}' class="page-image"></image>
      </movable-view>
    </block>
    
    <!-- <movable-view 
        x="{{item.x}}" y="{{item.y}}" 
        direction="all"
