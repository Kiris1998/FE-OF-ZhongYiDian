        out-of-bounds>
        <image src='{{tempFilePaths}}' class="page-image"></image>
      </movable-view> -->
  </movable-area>
  <!-- 讨论内容评论展示 -->
  <view class="comment">
    <view class="commentIt">
      <image src="../../img/爱心.png" style='width:40rpx;height:40rpx;padding:20rpx;'></image>
      <text>2</text>
    </view>
    <view class="commentIt">
      <image src="../../img/对话.png" style='width:40rpx;height:40rpx;padding:20rpx;'></image>
      <text>0</text>
    </view>
  </view>
</view>

