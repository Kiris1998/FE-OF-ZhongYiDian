/* 讨论作者及内容 */
.author{
  height: 55vh;
}
.authordetail{
  width: 100%;
  height: 12vh;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #FFFEF9;
}
.authorimage{
  width: 100rpx;
  height: 100rpx;
  padding: 30rpx;
}
.authorname{
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  font-size:32rpx;
}
.authortime{
  color: #B1B1B1;
}

/* 讨论内容展示 */
.page-section{
  width: 100%;
  height: 43vh;
  background-color: #E1E1E1;
}
/* 讨论内容评论展示 */
.comment{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  height: 80rpx;
  border-bottom: 1rpx solid #D8E5F9;
}
text{
  padding:20rpx;
}
.commentIt{
  display: flex;
  flex-direction: row;
  align-items: center;
}